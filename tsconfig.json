{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "ng-translatable": [
        "dist/ng-translatable/ng-translatable",
        "dist/ng-translatable"
      ],
      "ng-translation": [
        "dist/ng-translation"
      ],
      "ng-translation/*": [
        "dist/ng-translation/*"
      ]
    },
    "resolveJsonModule": true,
    "useDefineForClassFields": false
  }
}
